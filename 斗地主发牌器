#include<stdio.h>
#include<stdlib.h>
#include<time.h>
int card[54];
int i;
void init();
void mix();
void show();

void main()
{
    srand(time(NULL));  //调用time来初始化随机数
    init();
    mix();
    show();
    return;
}

void init()   //初始化扑克牌
{
    for( i = 0; i < 54; i++)
    {
        card[i] = i;
    }
}

void mix()    //混牌
{
    for (i = 0; i < 30;i++)
    {
        int a = rand() % 54;
        int b = rand() % 54;
        int t = card[a];
        card[a] = card[b];
        card[b] = t;
    }//初始化扑克牌
}

void show()   //显示
{
    for (i = 0; i < 54; i++)
    {
        if (card[i]/ 13 == 0)
        {
            printf("红桃%02d\t", card[i]% 13 + 1); /* code */
        }
        else if (card[i] / 13 == 1)
        {
            printf("黑桃%02d\t", card[i]% 13 + 1); /* code */
        }
        else if (card[i]/ 13 == 2)
        {
            printf("方块%02d\t", card[i]% 13 + 1); /* code */
        }
        else if (card[i] / 13 == 3)
        {
            printf("梅花%02d\t", card[i]% 13 + 1); /* code */
        }
        else if (card[i]/ 13 == 3)
        {
            printf("梅花%02d\t", card[i]% 13 + 1); /* code */
        }
        else if (card[i] == 52)
        {
            printf("大王\t"); /* code */
        }
        else if (card[i] == 53)
        {
            printf("小王\t"); /* code */
        }
        if ((i+1) % 17 == 0)
        {
            printf("\n"); /* code */
        }
    }
}

